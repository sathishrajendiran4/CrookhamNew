<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >

    <include
        android:id="@+id/title"
        layout="@layout/title" />

    <RelativeLayout
        android:id="@+id/formlayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/title"
        android:layout_margin="20dp" >

        <TextView
            android:id="@+id/twelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/appname"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/twelcome"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/taskid"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/twelcome"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/taskid"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ttasktype"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/twelcome"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/tasktypewithcolon"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/taskid"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/field"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/rework"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@+id/location"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/rework"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/brework"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/rework"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@color/bmapfield"
            android:drawableRight="@drawable/rework"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/rework"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bnewtask"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@+id/brework"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@color/bnewtask"
            android:drawableRight="@drawable/bnewtask"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/newtask"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>